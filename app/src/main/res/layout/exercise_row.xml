<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical">
        <TextView
            android:id="@+id/exerciseRowName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xD"
            ></TextView>
        <TextView
            android:id="@+id/exerciseRowSets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xD"
            ></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="xD"
        android:layout_weight="0.5"
        android:orientation="vertical">
        <TextView
            android:id="@+id/exerciseRowMuscle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xD"
            ></TextView>
        <TextView
            android:id="@+id/exerciseRowReps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xD"
            ></TextView>

    </LinearLayout>

</LinearLayout>